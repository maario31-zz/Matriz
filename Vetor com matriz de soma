#include <stdio.h>
#include <stdlib.h>
int main(){
	int a[4][4], i,j, soma[4]={0};
for(i=0;i<4;i++){
  for(j=0;j<4;j++){
  printf("Digite I:%d J:%d\n",i,j);
  scanf("%d", &a[i][j]);
}
}
for(i=0;i<4;i++){
  for(j=0;j<4;j++){ 
		 	  soma[i] = soma[i] + a[i][j];
}
printf("\n");
}
for(i=0;i<4;i++){
printf("%d \n", soma[i]);
}
system("pause");
return 0;
}
