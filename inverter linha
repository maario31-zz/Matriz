#include <stdio.h>
#include <stdlib.h>
int main(){
    int a[4][4], i,j;
for(i=0;i<4;i++){
for(j=0;j<4;j++){
				 
             printf("Digite o valor I:%d e J:%d da sua matriz:\n",i,j);
             scanf("%d", &a[i][j]);
    }
}

printf("\n");
  			 
for(i=0;i<4;i++){
for(j=3;j>=0;j--){
 				   printf("%d \t", a[i][j]);
				 }	
				 	  
 printf("\n");
    }
system("pause>NULL");
return 0;
}
